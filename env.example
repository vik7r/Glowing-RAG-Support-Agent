# ============================================================================
# RAG AGENTIC SUPPORT AGENT - ENVIRONMENT CONFIGURATION
# ============================================================================
# 
# Copy this to .env and fill in your actual API keys
# 
# IMPORTANT: Never commit the .env file with real keys to version control!
# Add to .gitignore: *.env
#

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model choice (recommended: gpt-4o-mini for cost efficiency, gpt-4o for quality)
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# PINECONE VECTOR DATABASE CONFIGURATION
# ============================================================================
# Get your keys at: https://www.pinecone.io
# Free tier: 1M vectors, 10GB storage
# 
PINECONE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=support-agent

# Vector dimension for OpenAI embeddings (always 1536 for text-embedding-3-small)
VECTOR_DIMENSION=1536

# ============================================================================
# TAVILY WEB SEARCH CONFIGURATION
# ============================================================================
# Get your key at: https://tavily.com
# Optional: Only needed if using web search capabilities
TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=True
LOG_LEVEL=info

# ============================================================================
# KNOWLEDGE BASE CONFIGURATION
# ============================================================================
# Chunk size for document splitting (tokens)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retriever config
RETRIEVER_K=3  # Number of documents to retrieve per query

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite database file path (for conversation history)
DATABASE_FILE=support_agent.db

# ============================================================================
# OPTIONAL: CUSTOM CONFIGURATIONS
# ============================================================================
# Namespace for organizing multiple support systems
KB_NAMESPACE=support-docs

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=50

# Enable debug logging
DEBUG=False
